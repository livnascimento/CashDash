@model IEnumerable<CashDash.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1>Funcionários</h1>
    </div>
    <div class="col-md-4">
        <a asp-action="Create" class="btn btn-primary float-end">Novo Funcionário</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Cargo
            </th>
            <th>
                Nome
            </th>
            <th>
                CPF
            </th>
            <th>
                E-mail
            </th>
            <th>
                Telefone
            </th>
            <th>
                Data de admissão
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeType.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdmissionDate)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EmployeeId"><i class="bi bi-pencil-fill"></i></a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.EmployeeId"><i class="bi bi-eye-fill"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EmployeeId"><i class="bi bi-trash3-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
