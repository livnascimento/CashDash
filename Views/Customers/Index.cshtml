@model IEnumerable<CashDash.Models.Customer>

@{
    ViewData["Title"] = "Clientes";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1>Clientes</h1>
    </div>
    <div class="col-md-4">
        <a asp-action="Create" class="btn btn-primary float-end">Novo Cliente</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                E-mail
            </th>
            <th>
                Telefone
            </th>
            <th>
                Endereço
            </th>
            <th>
                CEP
            </th>
            <th>
                Cadastro
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CustomerID"><i class="bi bi-pencil-square"></i></a>
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.CustomerID"><i class="bi bi-eye-fill"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CustomerID"><i class="bi bi-trash3-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
