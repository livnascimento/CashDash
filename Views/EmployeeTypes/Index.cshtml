@model IEnumerable<CashDash.Models.EmployeeType>

@{
    ViewData["Title"] = "Index";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1>Cargos</h1>
    </div>
    <div class="col-md-4">
        <a asp-action="Create" class="btn btn-primary float-end">Novo Cargo</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Cargo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EmployeeTypeID"><i class="bi bi-pencil-square"></i></a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.EmployeeTypeID"><i class="bi bi-eye-fill"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EmployeeTypeID"><i class="bi bi-trash3-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
